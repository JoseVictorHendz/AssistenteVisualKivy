#:import C kivy.utils.get_color_from_hex

<ScreenManagement>:
    TelaMenu
    UsuarioNome
    UsuarioEmail

<Botao@Button>:
    size_hint: 1, 1 #x, y

<BotaoCancelar@Button>
    size_hint: 1, .1 # x, y
    text: 'Cancelar'
    on_release: app.root.switch_to_telaMenu()

<Box@BoxLayout>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

<Pilha@StackLayout>:
    orientation: "tb-rl"
    padding: 10
    spacing: 10

<EntradaTexto@TextInput>:
    multiline: False
    size_hint: 1., .09
    width: root.width
    height: root.height

<TelaMenu>:
    name: 'telaMenu'
    Box:
        Botao:
            text: 'Usuario'
            on_release: app.root.switch_to_usuarioNome()
        Botao:
            text: 'Teste Som'
            on_release: app.root.som()
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'hello'

        Button:
            text: 'take pic'
            on_release: app.take_pic()

        Button:
            text: 'exit'
            on_release: app.stop()

<UsuarioNome>:
    name: 'usuarioNome'
    Pilha:
        EntradaTexto:
            id: textNome

        Button:
            size_hint: 1., .1
            on_release: app.root.switch_to_usuarioEmail()
            text: 'Enviar Nome'

        BotaoCancelar:

<UsuarioEmail>:
    name: 'usuarioEmail'
    Pilha:
        EntradaTexto:
            id: textEmail
        Button:
            size_hint: 1., .1
            on_release: app.root.switch_to_telaMenu()
            text: "Enviar email e salvar dados"
